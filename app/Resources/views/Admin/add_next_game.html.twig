{% extends 'base.html.twig' %}


{% block title %}Panel Administratora{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    {#<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">#}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/addNextGame.js') }}"></script>
{%  endblock %}


{% block body %}

    <div class="panel panel-success">
        <div class="panel-heading" style="position:relative">
            <h3 >Dodaj najbliższy mecz</h3>
            <a href="{{ path('adminPanel') }}"><button class="btn btn-danger"><span>Wróć</span></button></a>
        </div>
    <div id="calendarHeader">
        <h3>Wybierz dzień spotkania:</h3>
    </div>
    <div id="calendar">
        <div class="col-xs-5">

        </div>
        <div class="col-xs-2">
            {{ form_start(form) }}
            {{ form_row(form.date) }}
            {{ form_end(form) }}
        </div>
        <div class="col-xs-5">

        </div>

    </div>



{% endblock %}