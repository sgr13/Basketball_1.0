{% extends 'base.html.twig' %}

{% block title %}Panel Administratora{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/adminPanel.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/getUserInfo.js') }}"></script>
{%  endblock %}

{%  block body %}
    <div id="cont">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 >Wybierz użytkownika:</h3>
                <a class="mainPanel" href="{{ path('adminPanel') }}"><button class="btn btn-danger"><span>Wróć</span></button></a>
            </div>
            <div class="panel-body">
                <div class="col-xs-12">
                    <div class="col-xs-5">
                    </div>
                    <div class="col-xs-2">
                        <select id="playerSelect" class="form-control">
                            <option></option>
                            {% for user in users %}
                                <option value="{{ user.id }}">{{ user.username }}</option>
                            {% endfor %}
                        </select><br>
                    </div>
                    <div class="col-xs-5">
                    </div>
                </div>
                <div id="addPlayerToUserForm">
                    <div class="row">
                        <div class="col-xs-3">
                        </div>
                        <div class="col-xs-3 centerText">
                            {{ form_start(form) }}
                            {{ form_row(form.name) }}
                            {{ form_row(form.nickname) }}
                        </div><div class="col-xs-3 centerText">
                            {{ form_row(form.height) }}
                            {{ form_row(form.specialization) }}
                        </div>
                        <div class="col-xs-3">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3">
                        </div>
                        <div class="col-xs-6" style="text-align: center">
                            {{ form_label(form.photoFront, null, {'label_attr': {'class': 'label-upload'}, 'label': 'Dodaj zdjęcie:'} ) }}
                            {{ form_row(form.photoFront, { 'attr': {'class': 'center'} }) }}
                            {{ form_row(form.user, { 'attr': {'class': 'hidden'} }) }}
                            <button class="btn btn-lg btn-success">Dodaj zawodnika</button>
                            {{ form_end(form) }}
                        </div>
                        <div class="col-xs-3">
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                Panel Footer
            </div>

        </div>
    </div>
{% endblock %}