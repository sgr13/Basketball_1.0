{% extends 'base.html.twig' %}

{% block title %}Logowanie użytkownika{% endblock %}

{% block body %}
    <div id="mainContainerBackground">
    </div>
    <div id="mainContainer">
        <div id="loginContainer">
            <div id ="loginHeader"><span>Logowanie</span></div>
            {% if errors %}
                <div class="alert alert-danger">
                    <div>{{ errors.messageKey|trans(errors.messageData, 'security') }}</div>
                </div>
            {%endif%}
            <div id = "loginBody">
                <div id="loginInputs">
                    <form action="{{ path('login') }}" method="post">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="_username" value="{{ login }}" />

                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password" />

                        {#
                            If you want to control the URL the user
                            is redirected to on success (more details below)
                            <input type="hidden" name="_target_path" value="/account" />
                        #}

                        <button type="submit">login</button>
                    </form>
                </div>
                <div id="loginButton">
                    <p>Nie masz konta? <a href ="{{ asset('register')}}">Zarejestruj się</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}